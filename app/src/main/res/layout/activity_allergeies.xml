<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".activities.AllergeiesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectAllergeies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_heading_1x"
            android:layout_margin="@dimen/margin_medium_2"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:text="Write any specfic allergeies or sensitivity towards specific things (optional)"/>


        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/ctvAllergeies"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tvSelectAllergeies"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:background="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAllergeies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ctvAllergeies"
            android:layout_marginTop="@dimen/margin_medium_2"/>





        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBackFromAllergeies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_back"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_xxlarge"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_large"
            android:gravity="end"
            android:textColor="@color/button_color"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextFromAllergeies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_next"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_xxlarge"
            android:background="@drawable/ic_button_background"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>